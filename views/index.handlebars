<h2>Burgers ready to devour!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers already devoured.</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="new-burger-name">Burger Name:</label>
    <input type="text" id="new-burger-name" name="name">
  </div>

  <button type="submit">Add Burger!</button>
</form>
